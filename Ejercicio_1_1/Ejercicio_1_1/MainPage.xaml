<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Calculadora"
             x:Class="Ejercicio_1_1.MainPage">

    <StackLayout>

 


    <Entry Placeholder="Ingrese un numero" x:Name="txtnumero1" Keyboard="Numeric" />
    <Entry Placeholder="Ingrese un numero" x:Name="txtnumero2" Keyboard="Numeric" />
    <Label Text="Seleccione una opcion" HorizontalOptions="Center" VerticalOptions="Center"></Label>
    <Button Text="Sumar" x:Name="btnSumar" BackgroundColor="#F98D11" TextColor="Black" Clicked="btnSumar_Clicked" FontSize="22" />
    <Button Text="Restar" x:Name="btnRestar" BackgroundColor="#F98D11" TextColor="Black"  Clicked="btnRestar_Clicked"  FontSize="22" />
    <Button Text="Multiplicar" x:Name="btnMultiplicar"  BackgroundColor="#F98D11" TextColor="Black"  Clicked="btnMultiplicar_Clicked" FontSize="22" />
    <Button Text="Dividir" x:Name="btndividir" BackgroundColor="#F98D11" TextColor="Black"  Clicked="btndividir_Clicked"  FontSize="22" />

    <Label Text="Juan Miguel Paz 201410010078" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Medium"></Label>

    </StackLayout>

